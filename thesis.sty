\newcommand{\note}[2]{%
	%\vspace*{3mm}
	\begin{center}
	\framebox[13cm][t]{%
		\hspace*{3mm}
		\parbox[t]{12cm}{%
			\vspace*{2mm}
			\centerline{\bf #1}\vspace*{-2mm}
			\rule{12cm}{0.5mm} 
			\\#2
		}
	}
	\end{center}
	\vspace*{3mm}
}

